<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/home.css">
    <link rel="stylesheet" href="~/css/list.css">
    <title>acaShare</title>
    @RenderSection("ModeratorPanelCSS", false)
    @RenderSection("MaterialViewCSS", false)
</head>
<body>
    <nav>
        <div class="nav-wrapper">
            <a asp-area="Main" asp-controller="List" asp-action="AvailableUniversities" class="brand-logo">acaShare</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a asp-area="Administrator" asp-controller="AdministratorPanel" asp-action="Home">Panel administratora</a></li>
                <li><a asp-area="Moderator" asp-controller="ModeratorPanel" asp-action="Home">Panel moderatora</a></li>
                <li>
                    <form id="logout-form"
                          asp-area="Identity"
                          asp-page="/Account/Logout"
                          asp-route-returnUrl="@Url.Page("/Index", new { area = "" })"
                          method="post">

                        <a href="javascript:{}" onclick="document.getElementById('logout-form').submit()">Wyloguj</a>
                    </form>
                </li>
            </ul>
        </div>
    </nav>

    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
    <script src="~/js/home.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
