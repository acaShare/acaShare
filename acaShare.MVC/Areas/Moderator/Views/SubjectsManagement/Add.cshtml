@model SubjectDepartmentViewModel

@{ 
    var parms = new Dictionary<string, string>
    {
        { "semesterId", Model.SemesterId.ToString() },
        { "departmentId", Model.DepartmentId.ToString() }
    };
}

<div class="row">
    <form method="post" class="col s12">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div>
            <div class="input-field">
                <label asp-for="TitleOrFullName"></label>
                <input asp-for="TitleOrFullName" class="validate" />
                <span asp-validation-for="TitleOrFullName" class="text-danger input-error-small"></span>
            </div>
        </div>
        <div>
            <div class="input-field">
                <label asp-for="SubtitleOrAbbreviation"></label>
                <input asp-for="SubtitleOrAbbreviation" />
                <span asp-validation-for="SubtitleOrAbbreviation" class="text-danger input-error-small"></span>
            </div>
        </div>
        <input asp-for="SemesterId" type="hidden" />
        <input asp-for="DepartmentId" type="hidden" />

        <div class="buttons">
            <button type="submit" class="btn btn-default accept-button">Dodaj</button>
            <a asp-action="Subjects" asp-all-route-data="@parms" class="btn btn-default back-button">Wróć do listy przedmiotów</a>
        </div>
    </form>
</div>