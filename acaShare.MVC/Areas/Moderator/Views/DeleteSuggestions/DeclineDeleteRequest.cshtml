@model DeleteRequestViewModel

<div class="row">
    <form method="post" class="col s12">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div>
            <div class="input-field">
                <label asp-for="DeclineReason"></label>
                <input asp-for="DeclineReason" class="validate" />
                <span asp-validation-for="DeclineReason" class="text-danger input-error-small"></span>
            </div>
        </div>
        <input type="hidden" asp-for="DeleteRequestId" />
        <input type="hidden" asp-for="ReasonId" />

        <div class="buttons">
            <button type="submit" class="btn btn-default accept-button">Odrzuć sugestię usunięcia</button>
            <a asp-action="DeleteSuggestions" class="btn btn-default back-button">Wróć na listę sugestii usunięcia</a>
        </div>
    </form>
</div>